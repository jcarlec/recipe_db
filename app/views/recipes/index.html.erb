<div class="container">
<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1 class="rtitle">Recipes</h1>
</div>

  <div class="row">
    <% @recipes.each do |recipe| %>


    <div class="col-md-4">

    <div class="recipe-box">
      <% if recipe.image? %>
     <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
    <% end %>


    <ul>
      <li class="dbtitle"> <%= recipe.title %> </li>
      <li> <%= recipe.description %> </li>
      <li class="sed"> <%= link_to 'Show', recipe %>|
           <%= link_to 'Edit', edit_recipe_path(recipe) %>| 
           <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
    </ul>
      </div> <!--recipe box--> 
        </div> <!--closes column-->
    <% end %>

  </div> <!--closes row-->


<br>

<%= link_to 'New Recipe', new_recipe_path %>
</div> <!--closes container-->
